<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>portNonSSL</param-name>
        <param-value>8080</param-value>
    </context-param>
    <context-param>
        <param-name>portSSL</param-name>
        <param-value>8181</param-value>
    </context-param>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>Customers</display-name>
        <web-resource-collection>
            <web-resource-name>Customers</web-resource-name>
            <description/>
            <url-pattern>/customer/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Customers</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Employees</display-name>
        <web-resource-collection>
            <web-resource-name>Employees</web-resource-name>
            <description/>
            <url-pattern>/emploee/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Employees</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>file</realm-name>
    </login-config>
    <security-role>
        <description/>
        <role-name>Customers</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Employees</role-name>
    </security-role>
</web-app>
